@model UserSubscriptionDto

@{
    ViewData["Title"] = "My Subscription Dashboard";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3>📦 My Subscription</h3>
                </div>
                <div class="card-body p-4">
                    @if (Model == null)
                    {
                        <div class="alert alert-warning text-center">
                            You don't have any active subscription.
                            <a class="btn btn-success mt-3" asp-action="Packages">Choose a Package</a>
                        </div>
                    }
                    else
                    {
                        <h4 class="fw-bold">@Model.Package!.PackageName</h4>
                        <p><strong>Subscribed on:</strong> @Model.SubscriptionDate.ToShortDateString()</p>

                        <div class="row text-center my-3">
                            <div class="col-md-4">
                                <div class="border rounded-3 p-3 bg-light">
                                    <i class="bi bi-box-seam text-primary fs-2"></i>
                                    <p class="mb-1">Shipments</p>
                                    <h5>@Model.RemainingShipments / @Model.Package.ShippimentCount</h5>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="border rounded-3 p-3 bg-light">
                                    <i class="bi bi-signpost-split text-success fs-2"></i>
                                    <p class="mb-1">Kilometers</p>
                                    <h5>@Model.RemainingKm / @Model.Package.NumberOfKiloMeters</h5>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="border rounded-3 p-3 bg-light">
                                    <i class="bi bi-speedometer2 text-success fs-2"></i>
                                    <p class="mb-1">Weight</p>
                                    <h5>@Model.RemainingWeight / @Model.Package.TotalWeight Kg</h5>
                                </div>  
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Upgrade" class="btn btn-warning">
                                <i class="bi bi-arrow-up-circle"></i> Upgrade Package
                            </a>
                            <a asp-action="Renew" class="btn btn-success">
                                <i class="bi bi-arrow-repeat"></i> Renew
                            </a>
                            <a asp-action="Cancel" class="btn btn-danger">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
