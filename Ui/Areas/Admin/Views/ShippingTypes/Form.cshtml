@model ShippingTypeDto


@{
    ViewData["Title"] = Model.Id == Guid.Empty ? "Create Shipping Type" : "Edit Shipping Type";
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white">
        <h5>@ViewData["Title"]</h5>
    </div>
    <div class="card-body">
        <form asp-action="Save" method="post">

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="ShippingTypeAname" class="form-label">Arabic Name</label>
                <input asp-for="ShippingTypeAname" class="form-control" />
                <span asp-validation-for="ShippingTypeAname" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ShippingTypeEname" class="form-label">English Name</label>
                <input asp-for="ShippingTypeEname" class="form-control" />
                <span asp-validation-for="ShippingTypeEname" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ShippingFactor" class="form-label">Shipping Factor</label>
                <input asp-for="ShippingFactor" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="ShippingFactor" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">@ViewData["Title"]</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
